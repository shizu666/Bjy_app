<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.wms.tow.JianHuoXIaJia"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="巷  道  号"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical" />
                <TextView
                    android:id="@+id/tv_jhxj_hao"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/size"
                    android:textColor="#fff"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应下货位"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical" />
                <TextView
                    android:id="@+id/tv_jhxj_huowei"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height"
                    android:layout_marginLeft="5dp"
                    android:textColor="#fff"
                    android:textSize="@dimen/size"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实下货位"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical" />
                <EditText
                    android:id="@+id/et_jhxj_shixiahuowei"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000"
                    android:textSize="@dimen/size"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应下商品"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical" />
                <TextView
                    android:id="@+id/tv_jhxj_sku"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height"
                    android:layout_marginLeft="5dp"
                    android:textColor="#fff"
                    android:textSize="@dimen/size"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="应下数量"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical" />
                <TextView
                    android:id="@+id/tv_jhxj_yingnum"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height"
                    android:layout_marginLeft="5dp"
                    android:textColor="#fff"
                    android:textSize="@dimen/size"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已下数量"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/tv_jhxj_yixianum"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height"
                    android:layout_marginLeft="5dp"
                    android:text="0/0"
                    android:textColor="#fff"
                    android:textSize="@dimen/size"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实下数量"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical" />
                <EditText
                    android:id="@+id/et_jhxj_shixianum"
                    android:layout_width="100dp"
                    android:layout_height="@dimen/height"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000"
                    android:textSize="@dimen/size"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_edittext"
                    android:inputType="number"/>
                <TextView
                    android:id="@+id/tv_jhxj_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="袋"
                    android:textColor="#fff"
                    android:textSize="@dimen/size"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <include
                layout="@layout/button"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
