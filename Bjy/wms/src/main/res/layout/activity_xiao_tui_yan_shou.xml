<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tow.XiaoTuiYanShou"
    android:orientation="vertical">

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商 品 条 码"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/size"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:background="@drawable/bg_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商 品 名 称"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/size"
                    android:text="炕上代课教师肯德基"
                    android:gravity="center_vertical"
                    android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="保   质    期"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/size"
                    android:text="6个月"
                    android:gravity="center_vertical"
                    android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已 验 数 量"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/size"
                    android:text="120/1000"
                    android:gravity="center_vertical"
                    android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已验SKU数"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/size"
                    android:text="2/10"
                    android:gravity="center_vertical"
                    android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="质 量 属 性"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical"/>
               <RadioGroup
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:layout_marginLeft="5dp">
                   <RadioButton
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="正品"
                       android:textSize="@dimen/size"/>
                   <RadioButton
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="10dp"
                       android:text="残品"
                       android:textSize="@dimen/size"/>
               </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验 收 数 量"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:layout_width="100dp"
                    android:layout_height="@dimen/height"
                    android:layout_marginLeft="5dp"
                    android:textSize="@dimen/size"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:inputType="number"
                    android:background="@drawable/bg_edittext"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="袋"
                    android:textSize="@dimen/size"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="破 损 原 因"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical"/>
                <Spinner
                    android:id="@+id/sp_xtys"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height">
                </Spinner>
            </LinearLayout>
            <include
                layout="@layout/button" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
