<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.wms.tow.BuHuoXiaJia"
    android:orientation="vertical">

    <include
        layout="@layout/title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="源  库  区"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical"/>
                <Spinner
                    android:id="@+id/sp_bhxj"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="源  货  位"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height"
                    android:text="AA111"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/size"
                    android:layout_marginLeft="@dimen/left5"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="货  位  号"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/size"
                    android:textColor="@color/color000"
                    android:layout_marginLeft="@dimen/left5"
                    android:singleLine="true"
                    android:background="@drawable/bg_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品条码"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height"
                    android:textColor="@color/color000"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/size"
                    android:layout_marginLeft="@dimen/left5"
                    android:singleLine="true"
                    android:background="@drawable/bg_edittext"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品名称"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height"
                    android:text="康师傅放方面"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/size"
                    android:layout_marginLeft="@dimen/left5"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已下数量"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height"
                    android:text="12/25"
                    android:textColor="@color/colorRed"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/size"
                    android:layout_marginLeft="@dimen/left5"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实下数量"
                    android:textSize="@dimen/size"
                    android:layout_gravity="center_vertical"/>
                <EditText
                    android:layout_width="@dimen/width100"
                    android:layout_height="@dimen/height"
                    android:textColor="@color/color000"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/size"
                    android:layout_marginLeft="@dimen/left5"
                    android:singleLine="true"
                    android:background="@drawable/bg_edittext"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="袋"
                    android:textSize="@dimen/size"
                    android:layout_marginLeft="@dimen/left10"/>
            </LinearLayout>
            <include
                layout="@layout/button"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
